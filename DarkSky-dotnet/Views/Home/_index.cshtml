@model DarkSky_dotnet.Models.WeatherViewModel

<script>
	var skycons = new Skycons({ "color": "black" });
	skycons.add("icon", Skycons.@Model.darkSky.Currently.Icon);
	skycons.play();
</script>

<div class="weatherCard">

	<div style="padding:25px">
		<div class="location">@Model.address</div>
		<div class="forcastType">@String.Format("{0}", Model.darkSky.Currently.Time.DayOfWeek) @String.Format("{0}", Model.darkSky.Currently.Time.TimeOfDay)</div>
		<div class="forcastType"><span>@Model.darkSky.Currently.Summary</span></div>
	</div>

	<div style="padding-left:25px">
		<canvas class="forecastIcon" id="icon" width="64" height="64"></canvas>

		<div style="padding-left:10px;float:left">
			<div>
				<div class="temperature">
					<span>@String.Format("{0:N0}", Model.darkSky.Currently.TemperatureCelsius)</span>
				</div>
				<div class="degree">
					<span>°C</span>
				</div>
			</div>
		</div>
		<div  class="extraData">
			<div>Precipitation: @String.Format("{0:P0}", Model.darkSky.Currently.PrecipIntensity)</div>
			<div>Humidity: @String.Format("{0:P0}", Model.darkSky.Currently.Humidity)</div>
			<div>Wind:  @String.Format("{0:N0}", Model.darkSky.Currently.WindSpeedKilometers) km/h</div>
		</div>
	</div>
</div>